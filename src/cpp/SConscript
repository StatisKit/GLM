# -*-python-*-

from SCons.Errors import EnvironmentError

try:
    Import("env")

    cppenv = env.Clone(tools = ['cpp'])

    cppenv.AppendUnique(CPPDEFINES = ['LIBSTATISKIT_GLM'])

    exclude = """
    fisher.cpp
    fisher.h
    fisher.hpp
    glm.cpp
    glm.h
    glm.hpp
    """.split()

    sources = [source for source in cppenv.Glob('*.*') if not source.name in exclude]

    targets = cppenv.CppLibrary("statiskit_glm", sources)
    Alias("cpp", targets)
    Alias("autowig", targets)
    Alias("install", targets)
    try:
        wigenv = cppenv.Clone(tools = ['wig'])

        targets = wigenv.BoostPythonWIG('statiskit_glm', [target for target in targets if target.name.endswith('.h')],
                                        module='../py/_glm.cpp',
                                        decorator='../py/statiskit/glm/_glm.py',
                                        parser_bootstrap=1,
                                        controller='AutoWIG.py',
                                        depends=['statiskit_linalg', 'statiskit_stl', 'statiskit_core'])
        Alias("autowig", targets)
        wigenv.Depends(targets, "cpp")
    except EnvironmentError:
        Alias("autowig", [])
        pass
    except Exception:
        raise
except EnvironmentError:
    Alias("cpp", [])
    Alias("autowig", [])
    Alias("install", [])
    pass
except Exception:
    raise
